<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:id="@+id/editText3" android:layout_weight="0.22" android:text="同城约" android:autoText="false"
                android:gravity="center" android:background="#eff8fb"/>
        <TextView android:layout_width="20dp" android:layout_height="match_parent" android:layout_gravity="center"
                  android:id="@+id/editText4" android:layout_weight="0.22" android:text="多城约" android:autoText="false"
                  android:gravity="center" android:background="#caebf8"/>
        <TextView android:layout_width="20dp" android:layout_height="match_parent" android:layout_gravity="center"
                  android:id="@+id/editText5" android:layout_weight="0.22" android:text="创建邀请" android:autoText="false"
                  android:gravity="center" android:background="#eff8fb"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="40dp" android:orientation="horizontal">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出发地："
            android:paddingTop="10dp"
            android:paddingLeft="4dp"
            android:id="@+id/textView" android:textSize="23dp" android:textIsSelectable="true"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText1" android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目的地："
                android:paddingTop="10dp"
                android:paddingLeft="14dp"
                android:id="@+id/textView2" android:textSize="23dp" android:textIsSelectable="true"/>
        <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText2" android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" android:orientation="horizontal">


        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView" android:layout_gravity="center_vertical" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
