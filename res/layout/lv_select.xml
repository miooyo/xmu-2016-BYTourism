<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="#FFFFFF">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

        <ImageButton
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
        />
        <Button
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="首页"
                android:layout_marginLeft="3dp"
                android:textSize="18sp"
                android:id="@+id/returnhome"
                android:background="#00000000"
                android:onClick="returnHome"
                android:layout_alignParentStart="true"
        />

        <TextView
                android:id="@+id/TextView"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:paddingLeft="75dp"
                android:paddingTop="5dp"
                android:layout_weight="0.17"
                android:autoText="false"
                android:text="约驴友"
                android:textIsSelectable="true"
                android:textSize="23sp" />
        <ImageButton android:id="@+id/imageButton" android:layout_width="65dp" android:layout_height="53dp"
                     android:layout_marginTop="-10dp" android:layout_marginRight="-10dp" android:background="#00000000"
                     android:src="@drawable/person" android:onClick="turnToPersonal"/>


    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">
        <android.support.v4.view.ViewPager
                android:id="@+id/mypager"
                android:layout_width="match_parent"
                android:layout_height="282dp">
        </android.support.v4.view.ViewPager>
    </LinearLayout>


</LinearLayout>